{
  "version": "2025-06-18",
  "name": "Akaunting MCP Server",
  "description": "Model Context Protocol server for Akaunting accounting software",
  "capabilities": {
    "resources": true,
    "tools": true,
    "prompts": true
  },
  "protocol": {
    "version": "1.0.0"
  },
  "oauth": {
    "authorization_endpoint": "http://localhost/Ak-Dev/oauth4/oauth/authorize",
    "token_endpoint": "http://localhost/Ak-Dev/oauth4/oauth/token",
    "scopes": ["mcp:use", "read", "write"],
    "pkce_required": true,
    "grant_types": ["authorization_code", "refresh_token"]
  },
  "discovery": {
    "oauth_server": "http://localhost/Ak-Dev/oauth4/oauth/.well-known/oauth-authorization-server",
    "protected_resource": "http://localhost/Ak-Dev/oauth4/oauth/.well-known/oauth-protected-resource"
  }
}
